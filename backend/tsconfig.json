{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*"],
      "@components/*": ["/*"],
      "@config/*": ["config/*"],
    }
  },
  "include": ["src/**/*"]
}
